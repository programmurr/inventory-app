extends layout 

block content 
  h1= page 

  .film-info 
    .poster-container 
    if film.image.contentType === ""
      img.no-poster(src="/images/camera-outline.png" alt=film.escapedName + " poster not uploaded")
      p No poster uploaded.
    else 
      img(src=film.poster, alt=film.escapedName + " image")

    p= film.escapedDescription
    p Release Year: #{film.year}
    p Price: #{film.pricePounds}
    p Quantity in Stock: #{film.quantity}

    .genres
      h4 Genres
      each genre in film.genre
        a.film-genre(href=genre.url) #{genre.escapedName} 
      
      else 
        p Film does not belong to a Genre.

  .edit-film 
    a(href=film.url + "/update") Update Film Info
    a(href=film.url + "/delete") Delete Film 

