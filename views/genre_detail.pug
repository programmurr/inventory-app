extends layout 

block content 
  h1 Genre: #{page}

  .genre-description 
    p= genre.description
  
  .film-list 
    h4 Films 
    ul.genre-film-list
      each film in films 
        li.film-item 
          if film.image.contentType === ""
            a(href=film.url title=film.name)
              img.no-poster(src="/images/camera-outline.png" alt=film.name + " poster not uploaded")
            p No poster uploaded for 
              a(href=film.url) #{film.name}
          else 
            a(href=film.url title=film.name)
              img(src=film.poster, alt=film.name + " image")
        .separator
      
      else 
        p Genre has no films.
  
  .genre-links 
    a(href='/genres') All Genres
    a(href=genre.url + '/update') Update Genre Info
    a(href=genre.url + '/delete') Delete Genre 

